<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html">

    <body>

        <ui:composition template="./templates/adminTemplate.xhtml">

            <ui:define name="content">
                <div id="header">
				<div id="welcome">&nbsp;Manage Audiobooks</div><div id="logout"><a href="logout.html"><img src="images/logout.jpg" alt="Logout" border="none" /></a></div>
			</div><br />
			<div id="mainContent">
				<h:form>                                    
                                    <center><h:commandButton value="Add Audiobook" action="add-eBook.xhtml" /> | <input type="button" value="Edit Audiobook" name="edit" onClick="return OnEdit();" /> | <h:commandButton value="Delete Audiobook" action="#{adminReq.deleteItems()}" /></center>
				<table align="center">
					<tr>
						<td><input type="checkbox" name="selectAll" /></td>
						<td>Audiobook ISBN</td>
						<td> | Title</td>
						<td> | Author</td>
						<td> | Genre</td>
						<td> | Description</td>
						<td> | About The Author</td>
					</tr>
                                    <ui:repeat value="#{adminReq.displayList}" var="row">
					<tr>
                                            <td><h:selectBooleanCheckbox value="#{adminReq.itemsToDelete[row.bookId]}" /></td>
                                                <td><h:outputText value="#{row.ISBN}" /></td>
						<td><h:outputText value="#{row.itemName}" /></td>
                                                <td><h:outputText value="#{row.author}" /></td>
						<td>Genre</td>
						<td>Description Excerpt</td>
						<td>Author Bio Excerpt</td>
					</tr>
                                    </ui:repeat>
                                </table>
                            </h:form>
			</div>
            </ui:define>

        </ui:composition>

    </body>
</html>
